<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.JudgeDAO">

<!--    加上id 属性以区分 裁判类型相同的给分记录-->
    <resultMap id="RefJudges" type="po.Judge">
        <id property="competition.id" column="id"/>
        <result property="reftype" column="reftype"/>
        <association property="competition" javaType="po.Competition">
            <id property="id" column="id"/>
            <result property="project" column="project"/>
            <result property="type" column="type"/>
            <result property="sexgroup" column="sexgroup"/>
            <result property="agegroup" column="agegroup"/>
            <result property="place" column="place"/>
            <result property="date" column="date"/>
            <result property="isEnd" column="isEnd"/>
        </association>
    </resultMap>

    <resultMap id="CompJudges" type="po.Judge">
        <id property="referee.id" column="id"/>
        <result property="reftype" column="reftype"/>
        <association property="referee" javaType="po.Referee">
            <id property="id" column="id"/>
            <result property="name" column="name"/>
            <result property="refID" column="refID"/>
            <result property="phone" column="phone"/>
        </association>
    </resultMap>

    <select id="getRefJudges" resultMap="RefJudges" parameterType="int">
        SELECT c.*,j.reftype
        FROM judge j 
        LEFT JOIN competition c
        ON j.comp_id=c.id
        WHERE j.ref_id=#{refid}
    </select>

    <select id="getCompJudges" resultMap="CompJudges" parameterType="int">
        SELECT r.*,j.reftype
        FROM judge j 
        LEFT JOIN referee r
        ON j.ref_id=r.id
        WHERE j.comp_id=#{compid}
    </select>

    <insert id="addJudge" parameterType="po.Judge">
        INSERT INTO judge (comp_id,ref_id,reftype)
        VALUES (#{param1},#{param2},#{param3})
    </insert>

    <delete id="deleteJudge">
        DELETE FROM judge
        WHERE comp_id=#{param1}
        AND ref_id=#{param2}
    </delete>

    <update id="updateJudge">
        UPDATE judge
        SET reftype = #{param3}
        WHERE comp_id = #{param1}
        AND ref_id = #{param2}
    </update>

</mapper>