    <select id="getAthTempScores" resultMap="AthTempSocre" parameterType="int">
        SELECT r.id r_id,r.name,j.id j_id,t.id t_id,t.score,t.valid
        FROM tempscore t
        LEFT JOIN judge j
        ON t.judge_id = j.id
        LEFT JOIN referee r
        ON j.ref_id = r.id
        WHERE j.comp_id = #{param2}
        AND t.ath_id = #{param1}
    </select>

    <select id="getAthValidScores" resultMap="AthTempSocre" parameterType="int">
        SELECT r.id r_id,r.name,j.id j_id,t.id t_id,t.score,t.valid
        FROM tempscore t
        LEFT JOIN judge j
        ON t.judge_id = j.id
        LEFT JOIN referee r
        ON j.ref_id = r.id
        WHERE j.comp_id = #{param2}
        AND t.ath_id = #{param1}
        AND t.isValid = 1
    </select>

    <select id="getAthResultScore" resultType="double" parameterType="int">
        SELECT AVG (t.score)
        FROM tempscore t
        LEFT JOIN judge j
        ON t.judge_id = j.id
        LEFT JOIN referee r
        ON j.ref_id = r.id
        WHERE j.comp_id = #{param2}
        AND t.ath_id = #{param1}
        AND t.isValid = 1
    </select>

    <insert id="addTempScore" useGeneratedKeys="true" keyProperty="id" keyColumn="id" parameterType="po.TempScore">
        INSERT INTO tempscore (judge_id,ath_id,score)
        VALUES (#{judge.id},#{athid},#{score})
    </insert>

    <delete id="deleteTempScore">
        DELETE FROM tempscore
        WHERE id = #{tempScoreid}
    </delete>

    <update id="updateTempScore" parameterType="int">
        UPDATE tempscore
        SET valid = #{param2}
        WHERE id = #{param1}
    </update>
</mapper>