<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.OrderDetailDAO">
    <resultMap id="OrderDetailInf" type="po.OrderDetail">
        <id property="id" column="Id"/>
        <result property="name" column="Name"/>
        <result property="unitPrice" column="UnitPrice"/>
        <result property="quantity" column="Quantity"/>
        <association property="order" javaType="po.Order">
            <id property="id" column="Id"/>
            <result property="cusName" column="Cus_Name"/>
            <result property="cusPhone" column="Cus_PhoneNum"/>
        </association>
    </resultMap>

    <select id="getAllDetails" resultMap="OrderDetailInf">
        SELECT * FROM orderdetails LEFT JOIN orders ON orderdetails.Order_Id = orders.Id
    </select>

    <select id="getConditionalDetail" resultType="po.OrderDetail">
        SELECT * FROM orderdetails
        <where>
            <if test="param1!=null">
                AND Name = #{param1}
            </if>
            <if test="param2!=-1.0">
                AND UnitPrice &lt; #{param2}
            </if>
        </where>
    </select>

    <insert id="insertDetail" useGeneratedKeys="true" keyProperty="id" parameterType="po.OrderDetail">
        INSERT INTO orderdetails (Name, UnitPrice, Quantity, Order_Id)
        VALUES (#{name},#{unitPrice},#{quantity},#{orderId})
    </insert>

    <delete id="deleteDetail" parameterType="int">
        DELETE FROM orderdetails WHERE Id = #{id}
    </delete>

    <update id="updateDetail" >
        UPDATE orderdetails
        <set>
            <if test="param1!=null">
                Name = #{param1},
            </if>
            <if test="param2!=-1.0">
                UnitPrice = #{param2},
            </if>
            <if test="param3!=-1">
                Quantity = #{param3},
            </if>
            <if test="param4!=null">
                Order_Id = #{param4}
            </if>
        </set>
        WHERE Id = #{param5}
    </update>
</mapper>